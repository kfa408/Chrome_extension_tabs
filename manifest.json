{
    "name": "Chrome tabs",
    "version": "1.0",
    "description": "Build an Extension!",
    "manifest_version": 2,
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "page_action": {
        "default_popup": "popup.html"
    },
    "permissions": [ "tabs", "storage", "activeTab", "declarativeContent" ],
    "options_page": "options.html"
}
